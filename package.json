{
  "name": "aiten-agent",
  "version": "0.1.0",
  "private": true,
  "description": "Agent subscribe local MQTT and forward to AWS Lambda (aiten-robot-status)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "start": "node -r dotenv/config dist/index.js",
    "dev": "ts-node-dev -r dotenv/config --respawn src/index.ts",
    "typecheck": "tsc -p . --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.651.1",
    "dotenv": "^16.4.5",
    "mqtt": "^5.10.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "typescript": "^5.6.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}

